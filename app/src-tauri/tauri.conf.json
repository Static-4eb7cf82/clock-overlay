{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clock Overlay",
  "version": "0.3.0",
  "identifier": "com.clock-overlay.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clock Overlay",
        "fullscreen": false,
        "width": 50,
        "height": 50,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "resizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/32x32.png"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
